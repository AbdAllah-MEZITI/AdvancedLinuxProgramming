# usage : make --file=Makefile_Shd
# $@ 	Le nom de la cible
# $^ 	La liste des d√©pendances
# rpath : runtime path

CC=gcc
CFLAGS=-c -fPIC -g -Wall
MFLAGS=-Wl,-rpath=.

SRC_LIB= test1.c test2.c
OBJ_LIB= $(SRC_LIB:.c=.o)

LIBNAME=test
#SHARED=lib$(LIBNAME).so.1.0.1
SHARED=lib$(LIBNAME).so
#SFLAGS=-shared -lc -Wl,-soname,lib$(LIBNAME).so.1
SFLAGS=-shared -lc

EXEC=app


all : $(EXEC)

$(EXEC) : $(EXEC).c $(SHARED)
	$(CC) $^ -o $(EXEC) $(MFLAGS)

$(SHARED) : $(OBJ_LIB)
	$(CC) $(SFLAGS) $^ -o $(SHARED)

%.o : %.c
	$(CC) $(CFLAGS) $^ -o $@

clean :
	rm -rf *.o *.so *.so* *~ $(EXEC)
