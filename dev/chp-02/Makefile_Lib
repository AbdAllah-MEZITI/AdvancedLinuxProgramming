# usage : make --file=Makefile_Lib
# $@ 	Le nom de la cible
# $^ 	La liste des d√©pendances

CC=gcc
AR=ar
ARFLAGS=cr
CFLAGS=-c
LFLAGS=-L. -ltest

CIBLE=app

all:$(CIBLE)

$(CIBLE): app.o libtest.a
	$(CC) -o $(CIBLE) app.o $(LFLAGS)

app.o:app.c
	$(CC) $(CFLAGS) $^ -o $@

# archive
libtest.a: test1.o test2.o
	$(AR) $(ARFLAGS) $@ $^

test1.o: test1.c
	$(CC) $(CFLAGS) $^ -o $@
test2.o: test2.c
	$(CC) $(CFLAGS) $^ -o $@


clean:
	rm -f *.o *.a *.sa *~ $(CIBLE)
